<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>DarkPan - Bootstrap 5 Admin Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet"> 
    
    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="{{ asset('assets/back/lib/owlcarousel/assets/owl.carousel.min.css')}}" rel="stylesheet">
    <link href="{{ asset('assets/back/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css')}}" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="{{ asset('assets/back/css/bootstrap.min.css')}}" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="{{ asset('assets/back/css/style.css')}}" rel="stylesheet">
    <link href="{{ asset('assets/front/css/captcha.css')}}" rel="stylesheet">
    
</head>

<body>
    <div class="container-fluid position-relative d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-dark position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->


        <!-- Sign Up Start -->
        <div class="container-fluid" >
            <div >
                <div >
                <center>
                    <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3" style="width:500px;">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <a href="index.html" class="">
                                <h3 class="text-primary"><i class="fa fa-user-edit me-2"></i>DarkPan</h3>
                            </a>
                                {% for flash_error in app.flashes('verify_email_error') %}
                                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                                {% endfor %}
                            <h3>Sign Up</h3>
                        </div>
                        {{ form_start(registrationForm, {attr: {'novalidate': 'novalidate'}}) }}
                        <div class="form-floating mb-3">
                            {{form_widget(registrationForm.nom)}}
                            {{form_errors(registrationForm.nom)}}
                            {{form_label(registrationForm.nom,"Name")}}

                        </div>
                        <div class="form-floating mb-3">
                            {{form_widget(registrationForm.prenom)}}
                            {{form_errors(registrationForm.prenom)}}
                            {{form_label(registrationForm.prenom,"lastname")}}

                        </div>
                        <div class="form-floating mb-3">
                            {{form_widget(registrationForm.userName)}}
                            {{form_errors(registrationForm.userName)}}
                            {{form_label(registrationForm.userName,"userName")}}

                        </div>
                        <div class="form-floating mb-3">
                            {{form_widget(registrationForm.email)}}
                            {{form_errors(registrationForm.email)}}
                            {{form_label(registrationForm.email,"email")}}

                        </div>
                        <div class="form-floating mb-3">
                            {{form_widget(registrationForm.numTel)}}
                            {{form_errors(registrationForm.numTel)}}
                            {{form_label(registrationForm.numTel,"Tel")}}

                        </div>
                        <div class="form-floating mb-3">
                            {{form_widget(registrationForm.plainPassword)}}
                            {{form_errors(registrationForm.plainPassword)}}
                            {{form_label(registrationForm.plainPassword,"password")}}

                        </div>
                        <div class="form-floating mb-3">
                            {{form_widget(registrationForm.image)}}
                            {{form_errors(registrationForm.image)}}
                            {{form_label(registrationForm.image,"image")}}

                        </div>
                        {# <div class="form-floating mb-3">
                          <input type="hidden" class="form-control" id="floatingInput" name="captcha" value="{{random}}">
                          <input type="text" class="form-control" id="floatingInput" name="captchaVerif" >
                            



                        </div>
                                <label class="form-check-label" style="color:red;" >{{err}}</label>
                        <br>
                        <br> #}
                       <div class="captcha-area">
                       
                                 <div class="captcha-img">
                                      <img src="{{asset('assets/captcha-bg.png')}}" alt="Captch Background" style="width:400px;height:70px;">
                                       <span class="captcha" id="captcha" style="color:black;">{{random}}</span>
                                        <input type="hidden" class="form-control" id="floatingInput" name="captcha" value="{{random}}">
                                                        
                                  </div>
                       

                          </div>
                                   <input type="text" id="2" placeholder="Enter captcha" class="form-control" name="captchaVerif" maxlength="6" spellcheck="false" required>
                         <div class="status-text">
                                <label class="form-check-label" style="color:red;" >{{err}}</label>
    
                          </div>
                        
                        {{ form_row(registrationForm.agreeTerms) }}
                     <button type="submit" class="btn btn-primary py-3 w-100 mb-4">{{ button_label|default('Sign Up') }}</button>
                        <p class="text-center mb-0">Already have an Account? <a href="{{ path('app_login') }}">Sign in</a></p>
                    </div>
                    
                        {{form_end(registrationForm)}}

                </div>
                </center>
            </div>
        </div>
        <!-- Sign Up End -->
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ asset('assets/back/lib/chart/chart.min.js')}}"></script>
    <script src="{{ asset('assets/back/lib/easing/easing.min.js')}}"></script>
    <script src="{{ asset('assets/back/lib/waypoints/waypoints.min.js')}}"></script>
    <script src="{{ asset('assets/back/lib/owlcarousel/owl.carousel.min.js')}}"></script>
    <script src="{{ asset('assets/back/lib/tempusdominus/js/moment.min.js')}}"></script>
    <script src="{{ asset('assets/back/lib/tempusdominus/js/moment-timezone.min.js')}}"></script>
    <script src="{{ asset('assets/back/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js')}}"></script>

    <!-- Template Javascript -->
    <script src="{{ asset('assets/back/js/main.js')}}"></script>
</body>

</html>