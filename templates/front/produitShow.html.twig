     {% block jsbergila %}
        <script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script>
        <script>
                function onClickBtnAdd(event)
                {
                    event.preventDefault();
                    
                    //this return sur les a
                    const url=this.href;
                    const spanCount = this.querySelector('span.js-nbr');

                    axios.get(url).then(function(response){
                  
                  spanCount.textContent=response.data.nbr;
                 
                    })

                }
                
                
                
                document.querySelectorAll('a.js-add').forEach(function(link)
                {
                    link.addEventListener('click',onClickBtnAdd);
                })
        </script>
