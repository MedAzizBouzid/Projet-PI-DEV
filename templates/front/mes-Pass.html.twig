{% extends 'front/baseF.html.twig' %}


{% block body %}

  <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="{{ asset('assets/front/img/breadcrumb-bg.jpg')}}">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb-text">
                        <h2>My Passes</h2>
                        <div class="bt-option">
                            <a href="#">Home</a>
                            <span>My Passes</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->






    <!-- Pricing Section Begin -->
    <section class="pricing-section service-pricing spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <span>My Passes</span>
                        <h2>Purchase history</h2>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">

                {% for pass in passes %}
                <div class="col-lg-4 col-md-8">
                    <div class="ps-item">
                        <h3>id Pass: {{ pass.id }}</h3>
                        <div class="pi-price">
                            <h2>{{ pass.client.nom }}</h2>
                            <span>created At: {{ pass.createdAt ? pass.createdAt|date('Y-m-d H:i:s') : '' }}</span>
                            {% if pass.event is not null %}
                            <span>event name: {{ pass.event.nom }}</span>
                                
                            {% else %}
                            <span>this event has been deleted</span>
                                
                            {% endif %}

                        </div>
                        {% if pass.event is not null %}
                        <ul>
                            <li>event begin at: {{ pass.event.beginAt ? pass.event.beginAt|date('Y-m-d H:i:s') : '' }}</li>
                            <li>event finish at: {{ pass.event.finishAt ? pass.event.finishAt|date('Y-m-d H:i:s') : '' }}</li>
                            <li>{{ pass.event.description }}</li>


                        </ul>
                            
                        {% else %}
                        <span>this event has been deleted</span>                           
                        {% endif %}
                        
                        
                        
                       
                    </div>
                </div>
                {% endfor %}

            </div>
        </div>
    </section>
    <!-- Pricing Section End -->
    {% endblock %}