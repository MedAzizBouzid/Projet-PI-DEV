{% if pages > 1 %}
	<nav>
<div class="d-flex justify-content-center">

		<ul class="pagination mx-auto text-center">

			{% if currentPage>1 %}
				<li class="page-item ">
					<a href="{{path(path,{page:currentPage -1})}}" class="page-link">&lt;</a>
				</li>
			{% else %}
				<li class="page-item disabled">
					<a class="page-link">&lt;</a>
				</li>
			{%  endif %}

			{% for page in 1..pages %}
				<li class="page-item {{(page == currentPage) ? 'active' : ''}}">
					<a href="{{path(path,{page:page})}}" class="page-link active">{{page}}</a>

				</li>

			{% endfor %}
			{% if currentPage < pages %}
				<li class="page-item">
					<a href="{{path(path,{page:currentPage +1})}}" class="page-link">&gt;</a>
				</li>
			{% else %}
				<li class="page-item disabled">
					<a class="page-link">&gt;</a>
				</li>
			{%  endif %}
		</li>
	</ul>
    </div>
</nav>{% endif %}
