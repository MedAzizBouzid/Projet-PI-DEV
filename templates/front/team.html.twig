    {% endblock %}
{% block home %}{% endblock %}
{% block shop %}active{% endblock %}
{% block body %}
    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="{{ asset('assets/front/img/breadcrumb-bg.jpg')}}">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb-text">
                        <h2>Our Shop</h2>
                        <div class="bt-option">
                            <a href="./index.html">Home</a>
                            <span>Our Products</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Team Section Begin -->
    <section class="team-section team-page spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="team-title">
                        <div class="section-title">
                            <span>Our Team</span>
                            <h2>TRAIN WITH EXPERTS</h2>
                        </div>
                        <a href="#" class="primary-btn btn-normal appoinment-btn">appointment</a>
                    </div>
                </div>
            </div>
            <div class="row">
            {% for produit in produits %}
                <div class="col-lg-4 col-sm-6">
                    <div class="ts-item set-bg" data-setbg="{{ asset('uploads/'~ produit.image)}}">
                        <div class="ts_text">
                            <h4 style="color:red;">{{ produit.nom | upper }}</h4>
                            <span</span>
                             <h4>{{ produit.categorie }} </h4>
                               <h3 style="color:yellow;" >{{ produit.prix }} TND</h3>
                              
                            <div class="tt_social">
                                <a href="{{path('app_cart_add',{id: produit.id })}}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
