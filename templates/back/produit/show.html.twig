{% extends 'back/base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
               
               <img src="{{ asset('uploads/'~ produit.image) }}" alt="" 
                                        >
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ produit.stock }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_produit_index') }}"><button class=" btn btn-info">Retour </button></a>

    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}"><button class=" btn btn-success">Modifier</button></a>

    {{ include('back/produit/_delete_form.html.twig') }}
{% endblock %}
