{% extends 'back/base.html.twig' %}


{% block body %}
            <!-- Table Start -->
            <div class="row vh-100 bg-secondary rounded align-items-center justify-content-center mx-0">
            <div class="container-fluid pt-4 px-4" style="bottom:0;">
    <a href="{{ path('app_service_new') }}"><button type="button" class="btn btn-light m-2">Add New</button></a>
            
                {# <div class="card-body"> #}
                                <div class="table-responsive">
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                       <tr>
                                            <th>Id</th>
                                            <th>Nom</th>
                                            <th>Type</th>
                                            <th>Image</th>
                                            <th>Description</th>
                                            <th>Tarif</th>
                                            <th>actions</th>
                                        </tr>
                                    </thead>
                                   
                                                            <tbody>
                                {% for service in services %}
                                    <tr>
                                        <td>{{ service.id }}</td>
                                        <td>{{ service.nom }}</td>
                                        <td>{{ service.type }}</td>
                                        <td><img src="{{asset('uploads/'~ service.image)}} " alt="" class="img-thumbnail" style="width: 90px; height: 90px;" ></td>
                                        {# <td><img src="img/user.jpg" alt="" style="width: 40px; height: 40px;">{{ service.image }}</td> #}
                                        <td>{{ service.description }}</td>
                                        <td>{{ service.tarif }}</td>
                                        <td>
                                           <form method="post" action="{{ path('app_service_delete', {'id': service.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
    <button class="btn">Delete</button>
</form>

                                            <a href="{{ path('app_service_edit', {'id': service.id}) }}">edit</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="7">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                    </table>
                                </div>
                            </div>
                            </div>
            <!-- Table End -->
            {% endblock %}

            