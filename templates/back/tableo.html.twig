{% extends 'back/base.html.twig' %}


{% block body %}
            <!-- Table Start -->
            <div class="row vh-100 bg-secondary rounded align-items-center justify-content-center mx-0">
            <div class="container-fluid pt-4 px-4" style="bottom:0;">
           <h1> Liste Offres </h1>
                {# <div class="card-body"> #}
                                <div class="table-responsive">
                        
                                    <table class="table">
                                    <thead>
                                        <tr>
                                           <th>Id</th>
                                              <th>Type</th>
                                             
                                           <th>duree</th>
                                    
                                               <th>Prix</th>
                                                       <th>nouveau prix apres reduction</th>
                                                
                                               <th>Description</th>
                                                 <th>promotion</th>
                                            
                                                <th>actions</th>
                                               
                                        </tr>
                                    </thead>
                                   
                                    <tbody> 
                                     {% for offre in offres %}
                                            <tr>
                                                 <td>{{ offre.id }}</td>
                                                 
                                                <td> Tarif Par {{ offre.type }}</td>

                                                 <td>{{ offre.duree   }}  Mois</td>  

                                              <td>{{ offre.prix }}   DT</td> 

                                                 <td> {% if  offre.promo is  null  %} 
                                                     pas de nv prix
                                                     
                                                  {% else %}
                                       {{ offre.NvPrix}}   
                                              {% endif %}
                                                                                     
                                               </td>  
                                             <td>{{ offre.description }}</td>
                                      <td> {% if  offre.promo is  null  %}
                                              offre pas en promotion
          
                                                  {% else %}
                                            {{ offre.promo.pourcentage }} %
                                              {% endif %}
                                                                    </td>
                                      
                                         
                                      
                                                <td>   <a href="{{ path('app_offres_edit', {'id': offre.id}) }}"><button class="btn btn-danger "><i class=" bi bi-pen "></i></button></a>&nbsp;
                                            <a href= "{{ path('app_offres_delete', {'id': offre.id}) }}" ><button class="btn btn-danger "><i class="bi bi-trash-fill"></i></button></a>&nbsp;
                                            <a href=" {{ path('app_offres_show', {'id': offre.id}) }} "><button class="btn btn-danger "><i class=" bi bi-info-circle "></i></button></a> &nbsp;
                                         <br>
                                        
                                            
                                      
                                            
                                       

                                         
                                            
                                             </td>
                                         </tr>
                                          {% else %}
                                                      <tr>
                                                     <td colspan="6">no records found</td>
                                                      </tr>
                                          {% endfor %}
                          
                                      </tbody>
                                 </table>
                                               <a href="{{ path('app_offres_new') }}">Create new</a>
                                               <br> </br>
                                      
                                              
                                            
                                         

    
                                
                                 
                                      
                            </div>
                            </div>
            <!-- Table End -->

            
    {% endblock %}


            
    



            
            