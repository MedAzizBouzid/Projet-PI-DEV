{% extends 'base.html.twig' %}

{% block title %}Offres index{% endblock %}

{% block body %}
    <h1>Offres index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Duree</th>
                <th>Prix</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for offre in offres %}
            <tr>
                <td>{{ offre.id }}</td>
                <td>{{ offre.type }}</td>
                <td>{{ offre.duree ? offre.duree|date('H:i:s') : '' }}</td>
                <td>{{ offre.prix }}</td>
                <td>{{ offre.description }}</td>
                <td>
                    <a href="{{ path('app_offres_show', {'id': offre.id}) }}">show</a>
                    <a href="{{ path('app_offres_edit', {'id': offre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_offres_new') }}">Create new</a>
{% endblock %}
